<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Add Goal</title>
  <style>
    .form-container {
      max-width: 600px;
      margin: 50px auto;
      background-color: white;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      padding: 30px;
    }
    .form-title {
      text-align: center;
      color: blue;
      margin-bottom: 30px;
    }
    .form-control:focus {
      box-shadow: none;
      border-color: blue;
    }
  </style>
</head>
<body class="bg-light">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
    <div class="container">
      <a class="navbar-brand" href="/">Big Goalz</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/addHabit">Add Habit</a></li>
          <li class="nav-item"><a class="nav-link" href="/items">Manage Goal & Habits</a></li>
          <li class="nav-item"><a class="nav-link" href="/searchHabits">Search Habits</a></li>
          <li class="nav-item"><a class="nav-link" href="/searchGoals">Search Goals</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mt-4">
    <h2 class="text-center mb-4">Add New Goal</h2>
    <% if (messages && messages.length >0 ) {%>
      <div class="alert alert-danger">
        <% messages.forEach(msg => { %>
          <div><%= msg %></div>
        <% }) %>
      </div>
    <% }%>
    
    <form action="/addGoal" method="POST" enctype="multipart/form-data" class="mx-auto" style="max-width: 500px;">

      <div class="mb-3">
        <label for="goalTitle" class="form-label">Goal Title</label>
        <input type="text" class="form-control" id="goalTitle" name="goalTitle" value="<%= formData.goalTitle || ''%>"required>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <input type="text" class="form-control" id="description" name="description" required>
      </div>

      <div class="mb-3">
        <label for="targetDate" class="form-label">Target Date</label>
        <input type="date" class="form-control" id="targetDate" name="targetDate" required>
      </div>

      <div class="mb-4">
        <label for="image" class="form-label">Product Image</label>
        <input class="form-control" type="file" id="image" name="image" accept="image/*" required>
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-primary">Add Goal</button>
      </div>

    </form>
  </div>
</body>
</html>